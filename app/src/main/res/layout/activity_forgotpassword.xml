<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kat"
    tools:context=".forgotpassword">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_5"
        android:contentDescription="@string/contdes"
        />
    <TextView
        android:id="@+id/welcomeToText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcomeTo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        />
    <ImageView
        android:id="@+id/fit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeToText"
        android:contentDescription="@string/contdes"
        android:background="@drawable/fit"
        android:layout_marginStart="20dp"

        />
    <ImageView
        android:id="@+id/elevate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fit"
        android:contentDescription="@string/contdes"
        android:background="@drawable/elevate"
        android:layout_marginStart="20dp"

        />
    <TextView
        android:id="@+id/signup_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forgotpass_message"
        android:textSize="15sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/elevate"
        />
    <EditText
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:hint="@string/enter_your_email"
        android:autofillHints="emailAddress"
        android:textColorHint="@color/black"
        android:textColor="#000000"
        android:gravity="center"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/signup_message"
        android:background="@drawable/rectangle_6"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/forgotButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:background="@drawable/rectangle_8"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="55dp"
        android:text="@string/forgotpass_message"
        android:textStyle="bold"
        android:textSize="25sp"

        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgotButton"

        android:text="@string/goback"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/go_back"
        android:layout_alignBaseline="@+id/go_back"
        android:textColor="#FC8B00"
        android:text="Login"/>


</RelativeLayout>