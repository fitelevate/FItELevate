<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kat"
    tools:context=".login">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_5"
        android:contentDescription="@string/contdes"
        />
    <TextView
        android:id="@+id/welcomeToText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcomeTo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        />
    <ImageView
        android:id="@+id/fit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeToText"
        android:contentDescription="@string/contdes"
        android:background="@drawable/fit"
        android:layout_marginStart="20dp"

        />
    <ImageView
        android:id="@+id/elevate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fit"
        android:contentDescription="@string/contdes"
        android:background="@drawable/elevate"
        android:layout_marginStart="20dp"

        />
    <TextView
        android:id="@+id/signup_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_message"
        android:textSize="15sp"
        android:textStyle="bold"

        android:layout_marginStart="20dp"
        android:layout_below="@+id/elevate"
        />
    <EditText
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:hint="@string/enter_your_email"
        android:autofillHints="emailAddress"
        android:textColorHint="@color/black"
        android:textColor="#000000"
        android:gravity="center"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/signup_message"
        android:background="@drawable/rectangle_6"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
    <EditText
        android:id="@+id/passwd"
        android:inputType="textPassword"
        android:hint="@string/enter_your_password"
        android:textColorHint="@color/black"
        android:textColor="#000000"
        android:gravity="center"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/email"
        android:background="@drawable/rectangle_6"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />
    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwd"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwd"
        android:background="@drawable/rectangle_8"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="55dp"
        android:text="@string/signin"
        android:textStyle="bold"
        android:textSize="25sp"

        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/or_login_with"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="or login with"
        android:layout_below="@id/loginButton"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        />
    <ImageButton
        android:id="@+id/login_with_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/or_login_with"
        android:background="@drawable/group_5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/contdes"
        />

    <TextView
        android:id="@+id/dont_have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_with_google"

        android:text="@string/donthaveac"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/dont_have_account"
        android:layout_alignBaseline="@+id/dont_have_account"
        android:textColor="#FC8B00"
        android:text="SignUp"/>


</RelativeLayout>